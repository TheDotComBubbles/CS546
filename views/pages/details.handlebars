<header>
    <nav>
        <a href="/">Profile</a>
        <a href="/">About Us</a>
        <a href="/">Sign Out</a>
    </nav>
</header>

<main>
    <section>
        <h1>{{foundName}}</h1>
        {{#with details}}
            <dl>
                <dt>Name</dt>
                <dd>{{name}}</dd>
                <dt>Location</dt>
                <dd>{{location}}</dd>
                <dt>Style</dt>
                <dd>{{style}}</dd>
                <dt>Description</dt>
                <dd>{{description}}</dd>
                <dt>Rating</dt>
                <dd>{{rating}}</dd>
                <dt>Reviews</dt>
            </dl> 
        {{/with}}
    </section>
    
    <section>
        <p>Write your review here:</p>
        <form method="post" id="review-form" action="/venues/{{venueID}}/reviewadded">
            <label for="rating">Rating</label>
            <select name="rating" id="rating" required>
                <option value="" selected disabled hidden>Choose here</option>
                <option value="1">Horrible</option>
                <option value="2">Poor</option>
                <option value="3">Average</option>
                <option value="4">Good</option>
                <option value="5">Awesome</option>
            </select>
            <label for="content">Review</label>
            <input type="text" name="content" id="content" placeholder="Add your review here">
            <button type="submit" id="submit review">Submit Review</button>
        </form>

        <div id="message-container"></div>
    </section>    

</main>

<footer>
    <a href="/home">Make another Search</a>
</footer>
